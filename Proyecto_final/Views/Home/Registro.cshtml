@model Proyecto_final.Models.Usuario

@{
    Layout = null;
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html>
<head>
    <title>Registro</title>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <h2>Registro</h2>

    @using (Html.BeginForm("Registro", "Home", FormMethod.Post))
    {
        <div>
            <label for="NombreUsuario">Nombre de Usuario:</label>
            <input type="text" id="NombreUsuario" name="NombreUsuario" asp-for="NombreUsuario" required />
        </div>

        <div>
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="Email" asp-for="Email" required />
        </div>

        <div>
            <label for="Contrasena">Contraseña:</label>
            <input type="password" id="Contrasena" name="Contrasena" asp-for="Contrasena" required />
        </div>

        <div>
            <input type="submit" value="Registrarse" />
        </div>
    }

    <div>
        <a href="@Url.Action("Login", "Home")"><button type="button">Ir a la página de Inicio de Sesión</button></a>
    </div>
</body>
</html>
